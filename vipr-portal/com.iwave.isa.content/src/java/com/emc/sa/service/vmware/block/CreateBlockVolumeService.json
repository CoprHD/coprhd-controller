{
  baseKey:"CreateBlockVolume.Block.VMware",
  serviceId:"VMware-CreateBlockVolume",
  fields:{
    vcenter:{
      type:"assetType.vipr.vcenter"
    },
    datacenter:{
      type:"assetType.vipr.datacenter"
    },
    blockStorageType: {
      type:"assetType.vipr.blockStorageType",
      lockable:true,
      initialValue:"shared"
    },
    host:{
      type:"assetType.vipr.esxHost"
    },

    virtualArray:{
      type:"assetType.vipr.virtualArray",
      lockable: true
    },
    
    virtualPool:{
      type:"assetType.vipr.blockVirtualPool",
      lockable: true
    },

    project:{
      type:"assetType.vipr.project",
      lockable: true
    },

    consistencyGroup:{
      type:"assetType.vipr.consistencyGroup",
      required:false
    },

    volumes:{
      type:"table",
      items:{
        name:{
          type:"text",
          validation:{
            min:2,
            max:128
          }
        },
        size:{
          type:"storageSize",
          validation:{
            min:1
          }
        },
        numberOfVolumes:{
          type:"number",
          initialValue: "1",
          validation:{
              min:1
          }
        }
      }
    },
    
    hlu: {
      type:"number",
      lockable: true,
      required: false,
      initialValue: "-1",
      validation: {
        min:-1
      }
     },
    advanced:{
      type:"group",
      collapsed:true,
      items:{
        portGroup: {
            type:"assetType.vipr.exportVolumeForHostPortGroups",
            required: false,
            hideIfEmpty: true
        }
      }
    }
  }
  
}
