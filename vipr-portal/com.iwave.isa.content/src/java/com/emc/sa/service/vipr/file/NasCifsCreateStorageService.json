{
  baseKey:"NasCifsCreateStorage.File",
  serviceId:"NasCifsCreateStorage",
  fields:{
    virtualArray:{
      type:"assetType.vipr.fileVirtualArray",
      lockable: true
    },
    
    virtualPool:{
      type:"assetType.vipr.fileCifsVirtualPool",
      lockable: true
    },
    
    project:{
      type:"assetType.vipr.project",
      lockable: true
    },

    volumeName:{
      type:"text",
      validation:{
        regEx:"[a-zA-Z0-9_]+",
        min:2,
        max:128
      }
    },

    shareComment:{
      type:"text",
      required: false,
      validation:{
        regEx:"[^\-\u0080-\u009f]*",
        max:256
      },
      lockable: true
    },
    
    size:{
      type:"storageSize",
      validation:{
        min:1
      }
    },
    
    accessControlList:{
      type:"table",
      items:{
        aclType:{
          type: "choice",
          initialValue: "USER",
          select: "one",
          required: false,
          options: {
            "USER": "User",
            "GROUP": "Group"
          }
        },
        
        aclName:{
          type:"text",
          required: false
        },
        
        aclDomain:{
          type:"text",
          required: false
        },
                
        aclPermission:{
          type:"assetType.vipr.fileShareACLPermission",
          initialValue:"CHANGE"
        }
      }
    },
    
    smartQuota:{
      type:"group",
      collapsed:"true",
      items:{
          advisoryLimit:{
            type:"text",
            required: false,
            validation:{
              min:0,
              max:100
            }
          },
          
          softLimit:{
            type:"text",
            required: false,
            validation:{
              min:0,
              max:100
            }
          },
          
          gracePeriod:{
            type:"text",
            required: false,
            validation:{
              min:1
            }
          }
        }
      }
  }
}
