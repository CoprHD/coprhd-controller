<!-- Storage API Spring Context file -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-2.5.xsd">
    <context:annotation-config/>
    <context:component-scan base-package="com.emc.sa.asset" />

    <!-- Beans required to fulfill autowired dependencies -->
    <bean class="com.emc.vipr.client.ClientConfig"/>
    <bean class="com.emc.sa.model.dao.ModelClient">
        <constructor-arg><bean class="com.emc.sa.model.mock.InMemoryDbClient"/></constructor-arg>
    </bean>
</beans>