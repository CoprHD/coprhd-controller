_gen_resolv_conf() {
    if nameservers=${_GENCONFIG_network_nameservers} && [ -n "${nameservers}" ] ; then
        IFS="${IFS}," ; for n in ${nameservers} ; do echo "nameserver ${n}" ; done
    else
        _genconfig_done
    fi
}

_genconfig_exec _gen_resolv_conf         /etc/resolv.conf