{
  baseKey:"CreateAndMountBlockVolume.Block.Windows",
  serviceId:"Windows-CreateAndMountBlockVolume",
  fields:{
    blockStorageType: {
      type:"assetType.vipr.blockStorageType",
      lockable:true,
      initialValue:"exclusive"
    },

    host:{
      type:"assetType.vipr.windowsHost"
    },

    virtualArray:{
      type:"assetType.vipr.virtualArray",
      lockable: true
    },
    
    virtualPool:{
      type:"assetType.vipr.blockVirtualPool",
      lockable: true
    },
    
    project:{
      type:"assetType.vipr.project",
      lockable: true
    },
    
	rdfGroup:{
      type:"assetType.vipr.rdfGroup",
      lockable: true,
      required: false,
      hideIfEmpty: true
    },

    name:{
      type:"text",
      validation:{
        min:2,
        max:128
      }
    },

    consistencyGroup:{
      type:"assetType.vipr.consistencyGroup",
      required:false
    },

    size:{
      type:"storageSize",
      validation:{
        min:1
      }
    },
    
    fileSystemType:{
      type: "assetType.vipr.fileSystemType",
      lockable: true
    },    
    
    partitionType:{
      type: "choice",
      initialValue: "GPT",
      select: "one",
      options: {
        "GPT": "GPT",
        "MBR": "MBR"
      },
      lockable: true
    },
    
    blockSize:{
        type: "assetType.vipr.blockSize",
        lockable: true
    },
    
    mountPoint:{
      type: "text",
      required: false,
      validation: {
        regEx:"\\A[A-Za-z]$|\\A[A-Za-z](:[[\\\\]\\w^&@{}\\[\\],$=!\\-#()%.+~_]+)+"
      }
    },

    label:{
      type:"text",
      required: false,
      lockable: true,
      validation:{
        min:2,
        max:32
      }
    },

    hlu: {
      type:"number",
      lockable: true,
      required: false,
      initialValue: "-1",
      validation: {
        min:-1
      }
    },
    advanced:{
      type:"group",
      collapsed:true,
      items:{
        portGroup: {
            type:"assetType.vipr.exportVolumeForHostPortGroups",
            required: false
        }
      }
    }
  }
}
